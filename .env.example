# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=30000

# Jitsi Meet Configuration
VITE_JITSI_DOMAIN=meet.jit.si
VITE_JITSI_APP_ID=coumano-university

# File Upload Configuration
VITE_MAX_FILE_SIZE=104857600
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,mp4,mp3,jpg,jpeg,png

# Notification Configuration
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_FIREBASE_CONFIG={}

# Development Configuration
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info

# Security Configuration
VITE_SESSION_TIMEOUT=480
VITE_ENABLE_2FA=false

# Feature Flags
VITE_ENABLE_RECORDING=true
VITE_ENABLE_TRANSCRIPTION=true
VITE_ENABLE_AUTO_ATTENDANCE=true
VITE_ENABLE_BULK_IMPORT=true

# Localization
VITE_DEFAULT_LANGUAGE=en
VITE_DEFAULT_TIMEZONE=Africa/Douala

# Analytics
VITE_ENABLE_ANALYTICS=true
VITE_ANALYTICS_ENDPOINT=/analytics

# Storage Configuration
VITE_STORAGE_PROVIDER=local
VITE_CDN_URL=

# Email Configuration (for frontend notifications)
VITE_SUPPORT_EMAIL=support@university.cm
VITE_ADMIN_EMAIL=admin@university.cm